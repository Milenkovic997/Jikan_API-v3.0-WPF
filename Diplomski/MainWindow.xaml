<Window x:Class="Diplomski.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplomski"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">

    <!-- VISUAL_DESIGN_STYLES -->
    <Window.Resources>
        <ResourceDictionary>
            <!-- BUTTON_STYLES -->
            <Style TargetType="Button" x:Key="btnLeft">
                <Setter Property="Background" Value="{DynamicResource PrimaryHueDarkBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="15" />

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border CornerRadius="5" Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}">
                                <Grid>
                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" />
                                </Grid>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource PrimaryHueDarkBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="Button" x:Key="btnCenter">
                <Setter Property="Background" Value="{DynamicResource PrimaryHueDarkBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="15" />

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border CornerRadius="5" Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}">
                                <Grid>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource PrimaryHueDarkBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- SCROLL_BAR_DESIGN -->
            <Style x:Key="ScrollThumbs" TargetType="{x:Type Thumb}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid x:Name="Grid">
                                <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto" Fill="Transparent"/>
                                <Border x:Name="Rectangle1" CornerRadius="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto" Background="{TemplateBinding Background}"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Tag" Value="Horizontal">
                                    <Setter TargetName="Rectangle1" Property="Width" Value="Auto"/>
                                    <Setter TargetName="Rectangle1" Property="Height" Value="7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Width" Value="10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid x:Name="GridRoot" Width="12" Background="{x:Null}">
                                <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="True" Focusable="False">
                                    <Track.Thumb>
                                        <Thumb x:Name="Thumb" Background="{TemplateBinding Foreground}" Style="{DynamicResource ScrollThumbs}"/>
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="False"/>
                                    </Track.IncreaseRepeatButton>
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="False"/>
                                    </Track.DecreaseRepeatButton>
                                </Track>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger SourceName="Thumb" Property="IsMouseOver" Value="True">
                                    <Setter Value="{DynamicResource ButtonSelectBrush}" TargetName="Thumb" Property="Background"/>
                                </Trigger>
                                <Trigger SourceName="Thumb" Property="IsDragging" Value="True">
                                    <Setter Value="{DynamicResource DarkBrush}" TargetName="Thumb" Property="Background"/>
                                </Trigger>

                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                                <Trigger Property="Orientation" Value="Horizontal">
                                    <Setter TargetName="GridRoot" Property="LayoutTransform">
                                        <Setter.Value>
                                            <RotateTransform Angle="-90"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="PART_Track" Property="LayoutTransform">
                                        <Setter.Value>
                                            <RotateTransform Angle="-90"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Width" Value="Auto"/>
                                    <Setter Property="Height" Value="12"/>
                                    <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                    <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand"/>
                                    <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageRightCommand"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="mainGrid" Background="#FF0B0B0B">
        <materialDesign:DialogHost>
            
            <!-- DRAWER_HOST_LEFT_AND_RIGHT -->
            <materialDesign:DrawerHost HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="2" BorderBrush="{DynamicResource MaterialDesignDivider}" Height="724" Width="1284" Margin="0" BottomDrawerCloseOnClickAway="False">

                <!-- DRAWER_HOST -->
                <materialDesign:DrawerHost.Style>
                    <Style TargetType="materialDesign:DrawerHost" BasedOn="{StaticResource {x:Type materialDesign:DrawerHost}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                <Setter Property="OverlayBackground" Value="{DynamicResource PrimaryHueMidBrush}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </materialDesign:DrawerHost.Style>
                
                <!-- DRAWER_RIGHT -->
                <materialDesign:DrawerHost.RightDrawerContent>
                    <Grid Background="{DynamicResource PrimaryHueDarkBrush}">
                        <StackPanel Width="350" Background="#FF111111" MouseDown="headerPanel_MouseDown" Margin="3">
                            <TextBlock Text="Change Score:" Margin="30,40,15,0" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <ComboBox x:Name="cbChangeScore" Height="40" FontSize="16" FontWeight="Medium" Padding="6,6,5,3" SelectedIndex="0" VerticalContentAlignment="Stretch" Margin="15,0" MaxDropDownHeight="400" Foreground="White">
                                <ComboBoxItem Content="No Score" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="(1) Appalling" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="(2) Horrible" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="(3) Very Bad" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="(4) Bad" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="(5) Average" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="(6) Fine" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="(7) Good" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="(8) Very Good" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="(9) Great" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="(10) Masterpiece" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            </ComboBox>

                            <TextBlock Text="Change Status:" Margin="30,30,15,0" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <ComboBox x:Name="cbChangeStatus" Height="40" FontSize="16" FontWeight="Medium" Padding="6,6,5,3" SelectedIndex="0" VerticalContentAlignment="Stretch" Margin="15,0" MaxDropDownHeight="400" Foreground="White">
                                <ComboBoxItem Content="Currently Watching" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="Completed" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="On-Hold" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="Dropped" FontSize="16" FontWeight="Medium" Foreground="White"/>
                                <ComboBoxItem Content="Plan to Watch" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            </ComboBox>

                            <StackPanel Orientation="Horizontal" Height="40" Margin="0,50,0,0">
                                <Button x:Name="btnDeleteRowFromList" Style="{DynamicResource btnCenter}" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}" Content="DELETE" VerticalAlignment="Top" Click="btnDeleteRowFromList_Click" Height="40" FontSize="16" BorderBrush="{x:Null}" Foreground="#DDFFFFFF" FontWeight="Medium" Margin="10,0,1,0" Width="164"/>
                                <Button x:Name="btnViewSelectedAnimeFromList" Style="{DynamicResource btnCenter}" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}" Content="VIEW" VerticalAlignment="Top" Click="btnViewSelectedAnimeFromList_Click" Height="40" FontSize="16" BorderBrush="{x:Null}" Foreground="#DDFFFFFF" FontWeight="Medium" Margin="1,0,10,0" Width="164"/>
                            </StackPanel>
                            <Button x:Name="btnSaveChanges" Style="{DynamicResource btnCenter}" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}" Content="SAVE" VerticalAlignment="Top" Height="40" FontSize="16" BorderBrush="{x:Null}" Foreground="#DDFFFFFF" FontWeight="Medium" Margin="10,2,10,0" Click="btnSaveChanges_Click"/>

                            <StackPanel x:Name="spForPb" Margin="20,90,0,0" Width="300" >
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="10" FontSize="16" FontWeight="Medium" Width="15" Foreground="White"/>
                                    <ProgressBar x:Name="pb10" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Width="200" Margin="15,0,0,0"/>
                                    <TextBlock x:Name="tbpb10" FontSize="16" FontWeight="Medium" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="9" FontSize="16" FontWeight="Medium" Width="15" Foreground="White"/>
                                    <ProgressBar x:Name="pb9" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Width="200" Margin="15,0,0,0"/>
                                    <TextBlock x:Name="tbpb9" FontSize="16" FontWeight="Medium" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="8" FontSize="16" FontWeight="Medium" Width="15" Foreground="White"/>
                                    <ProgressBar x:Name="pb8" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Width="200" Margin="15,0,0,0"/>
                                    <TextBlock x:Name="tbpb8" FontSize="16" FontWeight="Medium" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="7" FontSize="16" FontWeight="Medium" Width="15" Foreground="White"/>
                                    <ProgressBar x:Name="pb7" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Width="200" Margin="15,0,0,0"/>
                                    <TextBlock x:Name="tbpb7" FontSize="16" FontWeight="Medium" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="6" FontSize="16" FontWeight="Medium" Width="15" Foreground="White"/>
                                    <ProgressBar x:Name="pb6" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Width="200" Margin="15,0,0,0"/>
                                    <TextBlock x:Name="tbpb6" FontSize="16" FontWeight="Medium" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="5" FontSize="16" FontWeight="Medium" Width="15" Foreground="White"/>
                                    <ProgressBar x:Name="pb5" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Width="200" Margin="15,0,0,0"/>
                                    <TextBlock x:Name="tbpb5" FontSize="16" FontWeight="Medium" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="4" FontSize="16" FontWeight="Medium" Width="15" Foreground="White"/>
                                    <ProgressBar x:Name="pb4" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Width="200" Margin="15,0,0,0"/>
                                    <TextBlock x:Name="tbpb4" FontSize="16" FontWeight="Medium" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                                    <TextBlock Text="3" FontSize="16" FontWeight="Medium" Width="15" Foreground="White"/>
                                    <ProgressBar x:Name="pb3" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Width="200" Margin="15,0,0,0"/>
                                    <TextBlock x:Name="tbpb3" FontSize="16" FontWeight="Medium" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="2" FontSize="16" FontWeight="Medium" Width="15" Foreground="White"/>
                                    <ProgressBar x:Name="pb2" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Width="200" Margin="15,0,0,0"/>
                                    <TextBlock x:Name="tbpb2" FontSize="16" FontWeight="Medium" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="1" FontSize="16" FontWeight="Medium" Width="15" Foreground="White"/>
                                    <ProgressBar x:Name="pb1" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Width="200" Margin="15,0,0,0"/>
                                    <TextBlock x:Name="tbpb1" FontSize="16" FontWeight="Medium" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>
                                <TextBlock x:Name="tbpbInformation" Margin="10,15,30,0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Foreground="White"/>

                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </materialDesign:DrawerHost.RightDrawerContent>

                <!-- DRAWER_TOP -->
                <materialDesign:DrawerHost.TopDrawerContent>
                    <Grid Background="{DynamicResource PrimaryHueDarkBrush}" Height="660" Width="1280" MouseDown="headerPanel_MouseDown">
                        <Grid Margin="3" Background="{DynamicResource PrimaryHueDarkBrush}">
                            <StackPanel Orientation="Horizontal">

                                <DataGrid x:Name="myLists" ItemsSource="{Binding}" IsReadOnly="True" FontWeight="Medium" FontSize="16" Background="#FF111111" HorizontalScrollBarVisibility="Disabled" Focusable="False" CanUserResizeColumns="False" BorderBrush="{x:Null}" SelectionMode="Single" Height="654" Width="1000" HorizontalAlignment="Left" CanUserSortColumns="False" SelectionChanged="myLists_SelectionChanged" CanUserReorderColumns="False" CanUserResizeRows="False" PreviewMouseDoubleClick="myLists_PreviewMouseDoubleClick">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="List Name" Binding="{Binding Listname}" Width="500"/>
                                        <DataGridTextColumn Header="Anime Count" Binding="{Binding Count}" Width="200"/>
                                        <DataGridTextColumn Header="Last Time Used" Binding="{Binding Date}" Width="300"/>
                                        <DataGridTextColumn Header="path" Binding="{Binding path}" Width="100" Visibility="Collapsed"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <StackPanel Orientation="Vertical" Width="271" Background="#FF111111" Margin="3,0,0,0">
                                    <Button x:Name="btnTopDrawerOpen" Style="{DynamicResource btnCenter}" Content="OPEN" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="40" FontSize="16" BorderBrush="{x:Null}" Foreground="#DDFFFFFF" FontWeight="Medium" Margin="0,30,0,0" Click="btnTopDrawerOpen_Click"/>
                                    <Button x:Name="btnTopDrawerDelete" Style="{DynamicResource btnCenter}" Content="DELETE" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="40" FontSize="16" BorderBrush="{x:Null}" Foreground="#DDFFFFFF" FontWeight="Medium" Margin="0,5,0,0" Click="btnTopDrawerDelete_Click"/>
                                    <Button x:Name="btnTopDrawerRename" Style="{DynamicResource btnCenter}" Content="RENAME" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="40" FontSize="16" BorderBrush="{x:Null}" Foreground="#DDFFFFFF" FontWeight="Medium" Margin="0,5,0,0" Click="btnTopDrawerRename_Click"/>
                                    <TextBox x:Name="tbRename" materialDesign:HintAssist.Hint="Enter New Filename" Width="250" FontSize="16" FontWeight="Medium" Margin="0,10" Foreground="White" Padding="5,0,0,0"/>
                                    
                                    <Button x:Name="btnTopDrawerCreateList" Style="{DynamicResource btnCenter}" Content="CREATE NEW LIST" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="40" FontSize="16" BorderBrush="{x:Null}" Foreground="#DDFFFFFF" FontWeight="Medium" Margin="0,80,0,0"  Click="btnCreateList_Click" />
                                    <Button x:Name="btnTopDrawerImport" Style="{DynamicResource btnCenter}" Content="IMPORT MAL" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="40" FontSize="16" BorderBrush="{x:Null}" Foreground="#DDFFFFFF" FontWeight="Medium" Margin="0,5,0,0" Click="btnImport_Click"/>
                                    <TextBox x:Name="importUsername" materialDesign:HintAssist.Hint="MyAnimeList.net Username" Width="250" FontSize="16" FontWeight="Medium" Margin="0,10" Foreground="White" Padding="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </materialDesign:DrawerHost.TopDrawerContent>

                <Grid>
                    <!-- NOTIFICATION -->
                    <Grid x:Name="notificationGrid" Margin="23,0,100,-65"  VerticalAlignment="Bottom" Panel.ZIndex="1" IsHitTestVisible="False" Background="Black" Grid.Column="1" >
                        <StackPanel Background="{DynamicResource PrimaryHueDarkBrush}" Margin="1" >
                            <TextBlock x:Name="notificationText" Text="TEXT" Margin="5,15" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Medium" MaxWidth="1050" Foreground="White"/>
                        </StackPanel>
                    </Grid>

                    <!-- TOP_DRAGGABLE_PANEL -->
                    <Grid x:Name="headerPanel" Height="42" VerticalAlignment="Top" Panel.ZIndex="1" Margin="944,0,0,0">
                        <ComboBox x:Name="themePicker" materialDesign:HintAssist.Hint="Select Theme" Height="36" SelectionChanged="themePicker_SelectionChanged" FontSize="16" FontWeight="Medium" Padding="10,7,5,0" VerticalContentAlignment="Stretch" MaxDropDownHeight="224" Foreground="White" Margin="0,4,134,2" BorderBrush="{x:Null}" Background="#FF232323" Cursor="Hand">
                            <ComboBoxItem Background="#801ca4" Content="Purple Heart" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#383c9c" Content="Blue Gem" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#1c74d4" Content="Denim" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#0288d1" Content="Pacific Blue" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#0097a7" Content="Eastern Blue" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#00796b" Content="Pine Green" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#388e3c" Content="Japanese Laurel" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#689f38" Content="Sushi" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#d32f2f" Content="Persian Red" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#c41c5c" Content="Cardinal" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#5d4037" Content="Very Dark Brown" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#f57c00" Content="Tangerine" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#fbc02d" Content="Sunglow" FontSize="16" FontWeight="Medium" Foreground="White"/>
                            <ComboBoxItem Background="#afb42b" Content="Earls Green" FontSize="16" FontWeight="Medium" Foreground="White"/>
                        </ComboBox>

                        <!-- SEARCH -->
                        <Label x:Name="lbHeader" HorizontalAlignment="Left" FontSize="24" FontWeight="SemiBold" Width="0" Margin="0,0,0,-1" Height="52" VerticalContentAlignment="Center"/>
                        <materialDesign:ColorZone x:Name="searchBarExpander" Mode="Standard" Padding="8 4 8 4" CornerRadius="2" Margin="0,3,80,1" materialDesign:ShadowAssist.ShadowDepth="Depth1" HorizontalAlignment="Right" VerticalAlignment="Center" Background="White" Height="38" MaxWidth="262" Width="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="btnSearchIcon" Style="{DynamicResource MaterialDesignToolButton}" Height="38" Margin="-4,-4,0,-4" Click="btnSearchIcon_Click" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39">
                                    <materialDesign:PackIcon Kind="Search" Foreground="#CC000000" Height="32" Width="35" RenderTransformOrigin="0.3,0.38" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0" Background="#02000000"/>
                                </Button>
                                <TextBox x:Name="searchTextBox" Grid.Column="1" materialDesign:HintAssist.Hint="Find Anime..." materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0" VerticalAlignment="Center" FontWeight="Medium" PreviewKeyDown="searchTextBox_PreviewKeyDown" Foreground="#DD000000" HorizontalAlignment="Center" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="16" Width="214" Height="38" Padding="0" Margin="5,-4,-8,-4" Grid.ColumnSpan="2" Cursor="IBeam" />
                            </Grid>
                        </materialDesign:ColorZone>
                        <Button x:Name="btnExit" Content="EXIT" Margin="0,3,4,1" Style="{DynamicResource btnCenter}" Height="Auto" BorderBrush="{x:Null}" Foreground="White" Background="#FF3A3B3C" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right" Click="btnExit_Click" Width="72" Cursor="Hand"/>
                        <Button x:Name="btnRetry" Content="RETRY" Margin="-90,3,339,1" Style="{DynamicResource btnCenter}" Height="Auto" BorderBrush="{x:Null}" Foreground="White" Background="#FF3A3B3C" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right" Width="87" Cursor="Hand" Click="btnRetry_Click" Visibility="Hidden"/>
                    </Grid>

                    <!-- TAB_CONTROL -->
                    <TabControl x:Name="mainTab" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Top" Background="black" BorderBrush="{x:Null}" BorderThickness="0" Width="1276" Height="718" MouseDown="headerPanel_MouseDown">

                        <!-- HEADER_TAB_STYLE -->
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border Name="Border" BorderThickness="0,0,1,0" BorderBrush="Black" Margin="0,0" Cursor="Hand">
                                                <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="10,2"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryHueDarkBrush}" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="False">
                                                    <Setter TargetName="Border" Property="Background" Value="#3a3b3c" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>

                        <!-- HOME_TAB -->
                        <TabItem x:Name="tabHome" Header="HOME" Margin="-2,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Width="100" Height="40" PreviewMouseLeftButtonUp="btnHome_Click" FontSize="16">
                            <ScrollViewer x:Name="sv" Background="Black" VerticalScrollBarVisibility="Hidden" Margin="-4,0,-4,-2">
                                <Grid x:Name="mainGridBackground" Background="#FF171717" Width="1282">
                                    <StackPanel x:Name="searchResultsStackPanel" Margin="8,0,0,0" Orientation="Vertical"/>
                                    <Image x:Name="welcomeImage" HorizontalAlignment="Left" VerticalAlignment="Top" Source="Images/bg.png" Stretch="UniformToFill" Height="537" Width="952" Margin="35,22,0,0"></Image>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>

